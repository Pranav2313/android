<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SaladFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_gravity="center">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ranchchickensalad"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19dp"
                    android:layout_marginTop="15dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranch Chicken Salad"
                    android:layout_marginTop="5dp"
                    ></TextView>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="150dp"
                    android:layout_height="27dp"
                    android:text="Order Food"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/mealsbtn"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/rainbowsalad"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19dp"
                    android:layout_marginTop="15dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainbow Salad"
                    android:layout_marginTop="5dp"
                    ></TextView>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="150dp"
                    android:layout_height="27dp"
                    android:text="Order Food"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/mealsbtn"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="165dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/strawberryspinachsaladwithwarmbacondressing"
                    ></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19dp"
                    android:layout_marginTop="15dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strawberry Spinach Salad With Warm Bacon Dressing"
                    android:layout_marginTop="5dp"
                    ></TextView>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="150dp"
                    android:layout_height="27dp"
                    android:text="Order Food"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/mealsbtn"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>