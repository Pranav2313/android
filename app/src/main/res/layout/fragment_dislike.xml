<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DislikeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_chevron_left_24dp"
            android:id="@+id/dislikesback"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dislikes"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"></TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/walnuts"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Walnuts"
                android:textAllCaps="false"

                ></CheckBox>
            <CheckBox
                android:id="@+id/mutton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Mutton"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"

                ></CheckBox>
            <CheckBox
                android:id="@+id/chicken"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Chicken"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"

                ></CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <CheckBox
                android:id="@+id/fish"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Fish"
                android:textAllCaps="false"

                ></CheckBox>
            <CheckBox
                android:id="@+id/beef"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Beef"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"

                ></CheckBox>
            <CheckBox
                android:id="@+id/egg"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Egg"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"

                ></CheckBox>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <CheckBox
                android:id="@+id/coconuts"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Coconuts"
                android:textAllCaps="false"

                ></CheckBox>
            <CheckBox
                android:id="@+id/macadamianuts"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="Macadamia nuts"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"

                ></CheckBox>
        </LinearLayout>
        <Button
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:text="Save"
            android:textAllCaps="false"
            android:id="@+id/save"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="290dp"
            android:layout_gravity="center"
            android:background="@drawable/signinbtn"
            android:textStyle="bold"
            ></Button>
    </LinearLayout>

</FrameLayout>